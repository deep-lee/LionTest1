<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/lay_icon"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@mipmap/shide_backgroud">
        <ImageView
            android:id="@+id/slide_icon"
            android:background="@mipmap/slide_icon_default"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" />
        <TextView
            android:id="@+id/slide_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="陆雪琪"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/slide_icon"
            android:layout_toEndOf="@+id/slide_icon"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp" />
       </RelativeLayout>

    <ListView
        android:id="@+id/slide_listview"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        >
    </ListView>

</LinearLayout>
